<% layout('layouts/boilerplate')%>  
<div class="row">
    <h1 class="text-center">New Car</h1>
    <div class="col-6 offset-3">
        <form action="/cars" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="make">Make</label>
                <input class="form-control" type="text" id="make" name="car[make]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="model">Model</label>
                <input class="form-control" type="text" id="model" name="car[model]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="car[image]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="year" >Car Year</label>
                <div class="input-group">
                    <span class="input-group-text" id="year-label"></span>
                    <input type="text" class="form-control" id="year" placeholder="0" aria-label="year"
                        aria-describedby="year-label" name="car[year]" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="odometer" >Odometer</label>
            <div class="input-group">
                <span class="input-group-text" id="odometer-label">km</span>
                <input type="text" class="form-control" id="odometer" placeholder="0" aria-label="odometer"
                    aria-describedby="odometer-label" name="car[odometer]" required>
            </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="bodyType">Body Type</label>
                <select class="form-select" id="bodyType" name="car[bodyType]" aria-label="bodyType" required>
                    <option value="sedan">Sedan</option>
                    <option value="hatchback">Hatch Back</option>
                    <option value="suv">SUV</option>
                  </select>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Car</button>
            </div>
        </form>
        <a href="/cars">All Cars</a>
    </div>
</div>

